@model IEnumerable<SalesWebMvc.Models.SalesRecord>

@{
    ViewData["Title"] = "Simple Search";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <form class="row" role="search">
        <div class="col-lg-4">
            <div class="form-group mt-2">
                <label for="minDate" class="control-label">Min Date</label>
                <input type="date" name="minDate" class="form-control" value=@ViewData["minDate"] />
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group mt-2">
                <label for="maxDate" class="control-label">Max Date</label>
                <input type="date" name="maxDate" class="form-control" value=@ViewData["maxDate"] />
            </div>
        </div>
        <div class="col-lg-4">
            <div class="form-group mt-2">
                <br />
                <button type="submit" class="btn btn-dark">Filter</button>
            </div>
        </div>
    </form>
</div>
<div class="panel panel-primary mt-3">
    <div class="panel-heading">
        <h3 class="panel-title">Total sales = @Model.Sum(obj => obj.Amount).ToString("F2")</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr class="success">
                    <th class="text-white">
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th class="text-white">
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th class="text-white">
                        @Html.DisplayNameFor(model => model.Seller)
                    </th>
                    <th class="text-white">
                        @Html.DisplayNameFor(model => model.Seller.Department)
                    </th>
                    <th class="text-white">
                        @Html.DisplayNameFor(model => model.Amount)
                    </th>
                    <th class="text-white">
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Seller.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Seller.Department.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>